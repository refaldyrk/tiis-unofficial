<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List Atlet</title>
    <!-- Hubungkan file Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Gaya tambahan khusus */
        /* Gaya tambahan khusus */
        table {
            width: 100%;
            border-collapse: collapse;
        }

        table th,
        table td {
            padding: 10px;
            text-align: left;
        }

        table th {
            background-color: #f8f8f8;
            font-weight: bold;
        }

        table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        table tr:hover {
            background-color: #e6e6e6;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .pagination {
            margin-top: 16px;
            display: flex;
            justify-content: center;
        }

        .pagination a {
            padding: 6px 12px;
            background-color: #f8f8f8;
            border: 1px solid #ccc;
            color: #333;
            text-decoration: none;
            margin-right: 4px;
            transition: background-color 0.3s ease;
        }

        .pagination a:hover {
            background-color: #ddd;
        }

        .pagination span {
            padding: 6px 12px;
            background-color: #f8f8f8;
            border: 1px solid #ccc;
            color: #333;
            font-weight: bold;
            margin-right: 4px;
        }

        .pagination {
            margin-top: 16px;
        }
    </style>
</head>

<body>
    <!-- athletes.ejs -->

    <h1><a href="/dashboard">Daftar Atlet</a></h1>

    <!-- Tambahkan kelas Bootstrap pada tabel -->
    <table class="table">
        <thead>
            <tr>
                <th>Member Number</th>
                <th>Nama</th>
                <th>Email</th>
                <th>Nomor Telepon</th>
                <th>Action</th>
                <!-- Tambahkan kolom lain sesuai kebutuhan -->
            </tr>
        </thead>
        <tbody>
            <% athletes.forEach((athlete)=> { %>
                <tr>
                    <td>
                        <%= athlete.member_number %>
                    </td>
                    <td>
                        <%= athlete.full_name %>
                    </td>
                    <td>
                        <%= athlete.email %>
                    </td>
                    <td>
                        <%= athlete.phone_number %>
                    </td>
                    <td>
                        <a class="btn btn-success" href="/athletes/<%= athlete.uuid %>">Card</a>
                    </td>
                    <!-- Tambahkan kolom lain sesuai kebutuhan -->
                </tr>
                <% }); %>
        </tbody>
    </table>

    <!-- Tampilkan navigasi paginasi dengan kelas Bootstrap -->
    <div class="pagination d-flex justify-content-center">
        <% if (page> 1) { %>
            <a href="?page=<%= page - 1 %>&per_page=<%= perPage %>" class="btn btn-primary mr-2">Previous</a>
            <% } %>

                <span class="btn btn-primary disabled">Page <%= page %></span>

                <% if (athletes.length===perPage) { %>
                    <a href="?page=<%= page + 1 %>&per_page=<%= perPage %>" class="btn btn-primary ml-2">Next</a>
                    <% } %>
    </div>

    <!-- Hubungkan file Bootstrap JS jika diperlukan -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>